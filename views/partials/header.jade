.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-apple
        | אורגנישוק
    .collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        li(class=(title == 'Home') ? 'active' : undefined)
          a(href='/') עמוד הבית
        //li(class=(title == 'API Examples') ? 'active' : undefined)
        //  a(href='/api') API Examples
        li(class=(title == 'Store') ? 'active' : undefined)
          a(href='store') חנות
        li(class=(title == 'Contact') ? 'active' : undefined)
          a(href='contact') דברו איתנו
      ul.nav.navbar-nav.navbar-left
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='login') כניסה
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='signup') יצירת חשבון
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              else
                img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') הפרופיל שלי
              li.divider
              li
                a(href='/orders') ההזמנות שלי
              li
                a(href='/carts') העגלות שלי
              li.divider
              li
                a(href='/logout') יציאה
